1)
//  Write a C program that asks the user to input a integer and calculates the sum of its digits. Using While loop.

//  Input : 
//  Enter a three digit number : 123
//  Output :
// 	Sum of the digits : 6
#include <stdio.h>
int main() {
int i=0,sum=0,a;
scanf("%d",&a);

while(a!=0)
{
    sum=a%10;
    i=i+sum;
    a=a/10;
    
}
printf("%d",i);
    return 0;
}
