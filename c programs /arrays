2) #include<stdio.h>
int main()
{
 int size;
printf("enter how many elements you need!");
scanf("%d",&size); //4
int arr[size];
for(int i=0;i<size;i++) // i ---- index arr[i]
{
printf("enter the element for index %d\n",i);
scanf("%d",&arr[i]); // this is for reading
}

int add= arr[0];//1
int sub= arr[0];
int multi= arr[0];

for(int i=1;i<size;i++)
{
 add+=arr[i];
 sub-=arr[i];
 multi*=arr[i];
}
printf("sum = %d\n",add);
printf("sub = %d\n",sub);
printf("multi = %d\n",multi);
return 0; 

}
output :
enter how many elements you need!4
enter the element for index 0
5
enter the element for index 1
4
enter the element for index 2
30
enter the element for index 3
20
sum = 59
sub = -49
multi = 12000


